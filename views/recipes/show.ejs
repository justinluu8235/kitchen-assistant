

<h1>Recipe Name</h1>
<%= recipe.recipeName %> 
<br>

<h2>Ingredients:</h2>
<% for(let i=0; i<ingredientsArr.length; i++){ %> 
<% let ingredient = ingredientsArr[i] %> 
<% let stringIngredient = ingredient.ingredientName + "   Quantity: " + ingredient.ingredientQuantity + " " + ingredient.quantityUnit %> 
<br>
<%= stringIngredient %> 
<% } %> 

<h2>Instructions:</h2>
<% for(let i=0; i<recipeStepsArr.length; i++){ %> 
<% let recipeStep = recipeStepsArr[i] %> 
<br>
<p>Step Number: <%= recipeStep.stepNumber %> </p>

<%= recipeStep.instructions %> 
<br>
<% } %> 