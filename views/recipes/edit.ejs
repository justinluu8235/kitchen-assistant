<form method="POST" action="/recipes/<%=recipe.id%>/?_method=PUT">

    <label for="recipeName">Recipe Name</label>
    <input type="text" name="recipeName" value="<%= recipe.recipeName%>" />

    <label for="categoryName">Recipe Category</label>
    <input type="text" name="categoryName" value="<%= recipeCategory.categoryName%>" />
    <br>
    <div class="all-ingredients">
        <% for(let i=0; i<ingredientsArr.length; i++){ %>
            <% let ingredient=ingredientsArr[i] %>
                <div class="new-ingredient">
                    <label for="ingredientName">Ingredient Name</label>
                    <input type="text" name="ingredientName" value="<%= ingredient.ingredientName%>" />

                    <label for="ingredientQuantity">Ingredient Quantity</label>
                    <input type="text" name="ingredientQuantity" value="<%= ingredient.ingredientQuantity%>" />

                    <label for="quantityUnit">Measurement Unit</label>
                    <input type="text" name="quantityUnit" value="<%= ingredient.quantityUnit%>" />


                    <label for="button"></label>
                    <input type="button" name="button" value="Delete Ingredient" id="deleteIngredientButton" />
                    <br>
                </div>
                <% } %>
    </div>

    <label for="button"></label>
    <input type="button" name="button" value="Add another Ingredient" id="addIngredientButton" />


    <div class="all-recipe-steps">
        <% for(let i=0; i<recipeStepsArr.length; i++){ %>
            <% let recipeStep=recipeStepsArr[i] %>
                <div class="new-recipe-step">
                    <label for="instructions">Instructions</label>
                    <input type="text" name="instructions" value="<%= recipeStep.instructions%>" />


                    <label for="button"></label>
                    <input type="button" name="button" value="Delete Step" id="deleteRecipeStepButton" />
                    <br>
                </div>
                <% } %>
    </div>
    <label for="button"></label>
    <input type="button" name="button" value="Add another Step" id="addRecipeStepButton" />




    <br /><br /><br />
    <input type="submit" />


</form>

<script src="/js/recipes_edit.js"></script>