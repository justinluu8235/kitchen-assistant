<a href="/userFriends/search">Search Users</a>

<% if(allFriends == null){ %> 
        <p>You currently have no friends....</p>
    <% } else {%> 
            <% for(let i=0; i < allFriends.length; i++){ %> 
                    <%= allFriends[i].friendEmail %> 
                    <form action="/userFriends/user/<%=allFriends[i].friendId%> " method="GET">
                        <input type="submit" value="View Recipes" >
                       </form>

                       <form action="/userFriends/<%=allFriends[i].id%>/?_method=DELETE" method="POST">
                        <input type="submit" value="Remove Friend">
                    </form>
                <% } %> 
        <% } %> 